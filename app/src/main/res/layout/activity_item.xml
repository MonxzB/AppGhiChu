<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/noteContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner"
    android:layout_marginBottom="10dp"
    android:padding="20dp">


    <TextView
        android:id="@+id/titleOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Tiêu đề 1"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/contentOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Noi dung"
        android:textSize="15dp"
        android:textColor="#393939"
        android:layout_below="@+id/titleOutput"/>
    <TextView
        android:id="@+id/dateOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="01/01/2023"
        android:textSize="10dp"
        android:gravity="end"
        android:textColor="#858484"
        android:layout_below="@+id/contentOutput"/>

</RelativeLayout>